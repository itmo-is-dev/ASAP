{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:T} {Level:u3}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Serilogs/AppLogs_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "PostgresConfiguration": {
    "Host": "localhost",
    "Port": 5433,
    "Username": "postgres",
    "Password": "postgres",
    "SslMode": "Prefer"
  },
  "Deployment": {
    "Environment": "local"
  },
  "Github": {
    "Enabled" : true,
    "Cache": {
      "SizeLimit": null,
      "ExpirationScanFrequencySeconds": 60,
      "EntryAbsoluteExpirationSeconds": null,
      "EntrySlidingExpirationSeconds": null
    },
    "Octokit": {
      "PrivateKey": "",
      "AppId": 0,
      "JwtExpirationSeconds": 600,
      "Service": {
        "Installation": {
          "Id": 0,
          "Enabled": false
        },
        "Organization": {
          "Name": "",
          "Enabled": false
        },
        "User": {
          "Name": "",
          "Enabled": false
        }
      }
    },
    "Invites" : {
      "Enabled" : true
    },
    "Webhooks" : {
      "Enabled" : true,
      "Secret" : ""
    }
  },
  "Google": {
    "Enabled": true,
    "Spreadsheets": {
      "GoogleDriveId": ""
    }
  },
  "GithubIntegrationConfiguration": {
    "GithubAuthConfiguration": {
      "OAuthClientId": null,
      "OAuthClientSecret": null
    },
    "GithubAppConfiguration": {
      "JwtExpirationSeconds": 60
    }
  },
  "Identity": {
    "IdentityConfiguration": {
      "ExpiresHours": 1,
      "Secret": "7EF53305-E445-4FB4-A815-688C78BDBDE4",
      "Issuer": "Kysect",
      "Audience": "Admins"
    },
    "DefaultAdmins": [
      {
        "Username": "admin",
        "Password": "Admin123!"
      }
    ],
    "Options": {
      "Password": {
        "RequireDigit": true,
        "RequireLowercase": true,
        "RequireNonAlphanumeric": true,
        "RequireUppercase": true,
        "RequiredLength": 6,
        "RequiredUniqueChars": 1
      }
    }
  },
  "Pagination": {
    "PageSize": 20
  }
}
