@using ITMO.Dev.ASAP.WebUI.Markup.Structure.Subjects
@inherits LayoutComponentBase

@layout MainLayout

<Div Class="navigation-list__layout"
     Width="Width.Is100"
     Height="Height.Is100">

    <Div Class="navigation-list__container hide-scroll-bar"
         Width="@(_loaded ? Width.Is25 : Width.Is100)"
         Overflow="Overflow.Scroll">

        <SubjectListComponent OnLoaded="OnLoaded"/>
    </Div>

    @if (_loaded)
    {
        <Div Width="Width.Is100" 
             Height="Height.Is100"
             Flex="Flex.Column">
            @Body
        </Div>
    }
</Div>


@code {

    private bool _loaded;

    private void OnLoaded()
    {
        _loaded = true;
        StateHasChanged();
    }

}