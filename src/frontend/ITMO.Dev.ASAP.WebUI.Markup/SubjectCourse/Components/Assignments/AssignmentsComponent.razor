@using ITMO.Dev.ASAP.Application.Dto.Study

@if (Assignments is not null)
{
    <ListGroup Flush>
        @foreach ((AssignmentDto assignment, int i) in Assignments.Select((x, i) => (x, i)))
        {
            int localI = i;
            <AssignmentInfoComponent Assignment="assignment" 
                                     OnAssignmentChanged="x => Assignments[localI] = x"/>
        }
    </ListGroup>
}
else
{
    <LoaderComponent/>
}

@code {

    [Parameter]
    public IList<AssignmentDto>? Assignments { get; set; }

}