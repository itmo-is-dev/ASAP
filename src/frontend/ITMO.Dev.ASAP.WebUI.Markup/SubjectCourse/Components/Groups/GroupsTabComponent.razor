<DropdownTabTitleComponent OnClick="OnSelectedTabChanged" Name="@Key">
    <ButtonContent>
        Groups
    </ButtonContent>
    <DropdownContent>
        <DropdownItem>
            <CreateButton Clicked="OnClicked"
                          Background="Background.Transparent"
                          TextColor="TextColor.Body"
                          FitContent="false">
                Add
            </CreateButton>
        </DropdownItem>
    </DropdownContent>
</DropdownTabTitleComponent>

@code {

        public const string Key = "groups";

    [Parameter]
    public EventCallback<string> OnSelectedTabChanged { get; set; }
    
    [Parameter]
    public EventCallback OnClicked { get; set; }

}