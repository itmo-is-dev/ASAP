@using Kysect.Shreks.Application.Dto.Study
@using Kysect.Shreks.WebUI.AdminPanel.Components.Assignments
@if (Assignments is not null)
{
    @foreach (AssignmentDto assignment in Assignments.OrderBy(x => x.Order))
    {
        <AssignmentInfoComponent Assignment="assignment"/>
    }
} else
{
    <LoaderComponent/>
}

@code {

    [Parameter]
    public IReadOnlyCollection<AssignmentDto>? Assignments { get; set; }

}