@using ITMO.Dev.ASAP.Application.Dto.Study
@using ITMO.Dev.ASAP.WebUI.AdminPanel.Components.Assignments
@if (Assignments is not null)
{
    @foreach (var assignment in Assignments.OrderBy(x => x.Order))
    {
        <AssignmentInfoComponent Assignment="assignment"/>
    }
}
else
{
    <LoaderComponent/>
}

@code {

    [Parameter]
    public ICollection<AssignmentDto>? Assignments { get; set; }

}